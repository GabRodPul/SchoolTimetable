{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "#common/": [
        "../common"
      ],
      "#common/*": [
        "../common/*"
      ],

      "#src/": [
        "./src"
      ],
      "#src/*": [
        "./src/*"
      ]
    }
  }
}